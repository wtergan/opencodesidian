{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "gemini-vision": {
      "type": "local",
      "command": ["npx", "-y", "@anthropic-ai/mcp-gemini"],
      "environment": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      },
      "enabled": false
    },
    "firecrawl": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      },
      "enabled": false
    }
  },
  "permission": {
    "*": "allow"
  }
}
